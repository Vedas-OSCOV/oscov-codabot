generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum IssueStatus {
  OPEN
  CLOSED
}

enum SubmissionStatus {
  PENDING_AI
  PENDING_MODERATOR
  APPROVED
  REJECTED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  role        Role         @default(USER)
  score       Int          @default(0)
  submissions Submission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String? // Keeping for backward compat if needed, but 'name' is primary
  githubId String? // Optional: mapped from Account if needed manually
  semester Int? // 1-8, null means not yet onboarded
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Issue {
  id          String       @id @default(cuid())
  repoUrl     String
  issueNumber Int
  title       String
  description String
  basePoints  Int
  status      IssueStatus  @default(OPEN)
  submissions Submission[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([repoUrl, issueNumber])
}

model Challenge {
  id          String       @id @default(cuid())
  title       String
  description String       @db.Text
  difficulty  String       @default("HARD") // Just for display
  points      Int          @default(100)
  submissions Submission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Submission {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Standard Issues
  issueId String?
  issue   Issue?  @relation(fields: [issueId], references: [id])

  // Semester 1 Challenges
  challengeId String?
  challenge   Challenge? @relation(fields: [challengeId], references: [id])

  prUrl   String? // Optional for challenges (text/code submission)
  content String? @db.Text // For code/text answers

  aiFeedback      String?          @db.Text
  aiScore         Int?
  status          SubmissionStatus @default(PENDING_AI)
  isMerged        Boolean          @default(false)
  awardedPoints   Int              @default(0)
  lastSubmittedAt DateTime? // Track last submission time for rate limiting
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // Unique constraint for Users per Issue OR Challenge?
  // We can't really enforce "either issueId or challengeId" easily with unique index in standard Prisma without some complexity
  // But we can keep unique per issue and unique per challenge separately via composite unique constraints if we want 1 submission per problem.
  @@unique([userId, issueId])
  @@unique([userId, challengeId])
}
